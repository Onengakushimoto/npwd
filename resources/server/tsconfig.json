{
  "compilerOptions": {
    "paths": {
      "*": ["./types/*"]
    },
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2018",
    "allowJs": false,
    "lib": ["es2018", "DOM"],
    "types": ["@citizenfx/server", "@types/node", "jest"],
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
